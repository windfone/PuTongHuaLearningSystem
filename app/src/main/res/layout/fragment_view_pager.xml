<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.fragment.FamousClassroomFragment">

    <LinearLayout
        android:id="@+id/top_bar_rl"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/icon_online_learn_top_bg"
        android:orientation="horizontal">

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/top_indicator"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/sort_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="gone">

            <ImageView
                android:id="@+id/sort_iv"
                style="@style/textSize_whitefff_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/icon_descending_white" />
            <!--android:text="@string/sort"-->

        </LinearLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>