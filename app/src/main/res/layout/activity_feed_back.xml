<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whitefff"
    android:orientation="vertical"
    tools:context=".ui.personal.activity.FeedBackActivity">

    <com.hlxyedu.putonghualearningsystem.weight.actionbar.XBaseTopBar
        android:id="@+id/xbase_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowLeft_x="true"
        app:isShowRight_x="false"
        app:middleText_x="@string/feedback" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <!--android:fillViewport="true" 撑满全局-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/shape_edit"
                    android:gravity="top"
                    android:textCursorDrawable="@drawable/my_cursor"
                    style="@style/textSize_black353_14"
                    android:hint="请输入您的意见..."
                    android:padding="8dp"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/commit_btn"
                style="@style/textSize_whitefff_15"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@drawable/blue_btn_bg"
                android:text="@string/commit"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>