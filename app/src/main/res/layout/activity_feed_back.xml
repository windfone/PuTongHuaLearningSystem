<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whitefff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.personal.activity.FeedBackActivity">

    <com.hlxyedu.putonghualearningsystem.weight.actionbar.XBaseTopBar
        android:id="@+id/xbase_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowLeft_x="true"
        app:isShowRight_x="false"
        app:middleText_x="@string/feedback" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/xbase_topbar"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_edit"
        android:gravity="top"
        style="@style/textSize_black353_14"
        android:hint="请输入您的意见..."
        android:padding="5dp"
        />
    
    <Button
        android:id="@+id/commit_btn"
        style="@style/textSize_blackE3E_14"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray5F5"
        android:text="@string/commit"
        />

</RelativeLayout>