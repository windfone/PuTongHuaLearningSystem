<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whitefff"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/headportrait_iv"
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="17dp"
                    android:src="@drawable/icon_headportrait" />

                <TextView
                    android:id="@+id/name_tv"
                    style="@style/textSize_black353_14"
                    android:layout_width="52dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="34dp"
                    android:text="张小盒" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_type_tv"
                    style="@style/textSize_black353_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="35dp"
                    android:text="张小盒" />

                <ImageView
                    android:id="@+id/phone_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_type_tv"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/icon_phone" />

                <TextView
                    android:id="@+id/phone_tv"
                    style="@style/textSize_graya9a_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_type_tv"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="17dp"
                    android:layout_toRightOf="@+id/phone_iv"
                    android:text="电话：12334667888999" />

                <ImageView
                    android:id="@+id/email_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phone_iv"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/icon_email" />

                <TextView
                    android:id="@+id/email_tv"
                    style="@style/textSize_graya9a_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phone_iv"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="17dp"
                    android:layout_toRightOf="@+id/email_iv"
                    android:text="邮箱：12334667888999" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>